{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "es2016"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "pretty": true
},
  "inlucde": ["*.ts"],
  "exclude": [
    "node_modules"
  ]
}
